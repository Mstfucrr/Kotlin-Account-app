<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28012E"
    tools:context=".MainRegister">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="172dp"
        android:layout_height="164dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="155dp"
        android:layout_height="31dp"
        android:text="Kayıt Ol"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextKayitKullaniciAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.426"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextTextKayitSifre"
        android:layout_width="272dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/style_for_edittext_radius"

        android:drawableStart="@drawable/lock_purple"
        android:drawablePadding="5sp"
        android:ems="10"
        android:hint="Parola Oluştur"
        android:inputType="textPersonName"
        android:paddingStart="15sp"
        android:textSize="20sp"
        app:layout_constraintCircleRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextKayitKullaniciAdi"
        tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

    <EditText
        android:id="@+id/editTextTextKayitKullaniciAdi"
        android:layout_width="272dp"
        android:layout_height="51dp"
        android:layout_marginTop="104dp"

        android:background="@drawable/style_for_edittext_radius"
        android:drawableStart="@drawable/account_purple"
        android:drawablePadding="5sp"
        android:drawableTint="#200125"
        android:ems="10"
        android:hint="Kullanıcı Adı Oluştur"
        android:inputType="textPersonName"
        android:paddingStart="15sp"
        android:textSize="20sp"
        app:layout_constraintCircleRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,RtlSymmetry" />

    <android.widget.Button
        android:id="@+id/btn_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/style_for_buttons_radius"
        android:text="Girişe Dön"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextKayitSifre"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/btn_Confirm"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextKayitSifre" />

    <android.widget.Button
        android:id="@+id/btn_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/style_for_buttons_radius"
        android:text="Kaydet"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/editTextTextKayitSifre"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextKayitSifre" />
</androidx.constraintlayout.widget.ConstraintLayout>